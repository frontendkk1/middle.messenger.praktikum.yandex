{
    "extends": "stylelint-config-standard",
    "ignoreFiles": [
        "dist/**/*"
    ],
    "plugins": [
        "stylelint-order"
    ],
    "rules": {
        "string-quotes": "single",
        "font-family-name-quotes": "always-unless-keyword",
        "indentation": 4,
        "order/order": [
            "custom-properties",
            "declarations"
        ],
        "order/properties-order": [
            "width",
            "height"
        ]
    }
}
