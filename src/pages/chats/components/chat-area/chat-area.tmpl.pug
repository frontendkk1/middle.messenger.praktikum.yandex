if chat
    .chat-header
        .chat-profile
            .chat-profile__avatar
            p.chat-profile__name!= chat.title
        .chat-users

        .chat-menu
            .chat-menu__hamburger
                svg( viewBox='0 0 3 16' fill='none' xmlns='http://www.w3.org/2000/svg')
                    circle(cx='1.5' cy='2' r='1.5' fill='#1E1E1E')
                    circle(cx='1.5' cy='8' r='1.5' fill='#1E1E1E')
                    circle(cx='1.5' cy='14' r='1.5' fill='#1E1E1E')


    .messages-area
        !=messagesList

    .message-form
        .message-form_flex
            img.message-form__file-icon(width="32" height="32" src=fileImage)
            input.message-form__input(type="text" placeholder="Сообщение")
            .message-form__send
                img.message-form__send-icon(width="28" height="28" src=sendImage)
