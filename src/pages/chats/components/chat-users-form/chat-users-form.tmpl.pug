case view
    when 'add'
        form.create-chat-form
            p.form__title Добавить пользователя
            if loginField
                div.form__field
                    != loginField
            if submitAddButton
                div.form__field
                    != submitAddButton
            if backButton
                div.form__field
                    != backButton
    when 'delete'
        form.create-chat-form
            p.form__title Удалить пользователя
            if loginField
                div.form__field
                    != loginField
            if submitDeleteButton
                div.form__field
                    != submitDeleteButton
            if backButton
                div.form__field
                    != backButton
    default
        div
            != addUserButton
        div
            != removeUserButton

